<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" type="text/css" href="~/Content/estilos/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200;0,300;0,400;0,600;0,700;0,800;0,900;1,200;1,300;1,400;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/Content/estilos/estilos.css">



</head>

<body>

    <nav class="topnav navbar navbar-fixed-top main-font">
        <div class="container-fluid">
            <div class="container">

                <div id="navbar " class="navbar-collapse collapse">

                    <ul class="nav navbar-nav navbar-left">
                        <li><a><i class="fa fa-gg-circle fa-lg" style="margin-right: -12px;"></i></a></li>
                        <li>@Html.ActionLink("Comunidad De Practica", "Index", "Home")</li>
                    </ul>
                    <!--diferentes vistas dependiendo de si hay usuario logeado -->
                    @Html.Partial("_LayoutTopNav")
                </div><!--/.nav-collapse -->
            </div>

        </div><!--/.container-fluid -->
    </nav>

    <div class="container my-body-content main-font ">
        <div class="row my-row">
            <div class="col-md-3 my-col">
                <!-- Sidebar -->
                <div id="sidebar-wrapper" class="shadow">

                    <ul class="sidebar-nav">
                        <!--diferentes vistas dependiendo de si hay usuario logeado -->
                        @Html.Partial("_LayoutSideBar")
                        <!-- Por ahora ya que no hay usuarios-->
                        
                        <li> @Html.ActionLink("Crear Artículo Largo", "Index", "ArticuloLargo") </li>
                        <li> @Html.ActionLink("Crear Artículo Corto", "Create", "Articulo") </li>
                        <li class="sidebar-divider"></li>

                        <li> @Html.ActionLink("Ver Miembros", "UsuariosComunidad", "Usuario") </li>


                        <li> @Html.ActionLink("Asignar Meritos", "ArticulosCalificados", "Articulo") </li>
                        <li class="sidebar-divider"></li>

                        <!-- Por ahora  ya que no hay usuarios-->
                        <li style="color: #999999; padding: 1rem;"> Busqueda por tópico  </li>
                        <li>

                            <div style="padding-left: 10px; padding-right: 10px;">
                                <div class="search-bar">
                                    <input id="tableSearch" class="search-text" type="text" style="font-size: 1.3rem;" placeholder="Busque aqui.">
                                </div>

                            </div>
                            <script type="text/javascript">
                                var input = document.getElementById("tableSearch");
                                input.addEventListener("keyup", function (event) {
                                    if (event.keyCode === 13) {
                                        var url = '@Url.Action("Busqueda", "Articulo", new { hilera ="VAL"})';
                                        url = url.replace("VAL", document.getElementById("tableSearch").value);

                                        //alert(url);
                                        window.location = url;
                                    }
                                });
                            </script>

                        </li>

                        <li class="sidebar-divider"></li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Tópicos<span class="caret"></span></a>
                            <ul class="dropdown-content">
                                <li><a href="@Url.Action("Busqueda", "Articulo", new { hilera ="Biología"})">Biología</a></li>
                                <li><a href="@Url.Action("Busqueda", "Articulo", new { hilera ="Educación virtual"})">Educación virtual</a></li>
                                <li><a href="@Url.Action("Busqueda", "Articulo", new { hilera ="Matemática"})">Matemática</a></li>
                                <li><a href="@Url.Action("Busqueda", "Articulo", new { hilera ="SQLServer"})">SQLServer</a></li>
                                <li><a href="@Url.Action("Busqueda", "Articulo", new { hilera ="Videojuegos"})">Videojuegos</a></li>
                                <li><a href="@Url.Action("Busqueda", "Articulo", new { hilera ="WEB"})">WEB</a></li>
                            </ul>
                        </li>
                        <li class="sidebar-divider"></li>
                        <li>@Html.ActionLink("Página Principal", "Index", "Home", routeValues: null, htmlAttributes: new { title = "Devolverse a la página principal" })</li>
                        @*<li>@Html.ActionLink("About", "About", "Home")</li>*@
                        <li>@Html.ActionLink("FAQ", "FAQ", "faq", routeValues: null, htmlAttributes: new { title = "Preguntas frecuentes" })</li>
                    </ul>



                </div>
                <!-- /#sidebar-wrapper -->
            </div>
            <div class="col-md-9 my-col">

                <!-- old body with class container body  -->
                @RenderBody()

            </div>
        </div>
    </div>


