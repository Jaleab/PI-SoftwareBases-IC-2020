
<html>

    <head>
        <title> Solicitar colaboradores para revisión </title>
    </head>

    <body>

        <hr />
        <div>

            @if (ViewBag.categoria == "Coordinador")
            {

                <h2> Solicite a los miembros de núcleo colaboración </h2>

                <hr />

                foreach (var articulo in ViewBag.revisiones.ArticulosEnRevision)
                {
                    <div class="col-xl-12 col-md-12 mb-12 articulo-element shadow">

                        <div class="col-md-6 mr-2">
                            <div class="row main-font article-h1"> Titulo </div>
                            <div class="row main-font article-h2"> @articulo.Titulo </div>

                        </div>

                        <div class="box-vertical-divider col-md-1   "></div>

                        <div class="col-md-3 mr-2">

                            <div class="row main-font article-h2">Fecha de publicación</div>
                            <div class="row main-font article-h2">&#128197 @articulo.FechaPublicacion</div>

                        </div>

                        <div class="box-vertical-divider col-md-1   "></div>

                        <div class="col-md-2 mr-2">
                            <div class="row">
                                <div class="row main-font article-h2"></div>
                                <a class="btn box-btn" href="/Home/Index"> Pedir colaboración</a>
                            </div>
                        </div>

                    </div>
                }

            }
            else
            {

                <h2>Lo sentimos, usted no puede interacturar en esta sección</h2>

            }
        </div>

        
        <div class="row">
            <a class="btn box-btn" href="/Home/Index"> Volver a página principal</a>
        </div>


    </body>
</html>

