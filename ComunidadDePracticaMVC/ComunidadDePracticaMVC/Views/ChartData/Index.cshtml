@model ComunidadDePracticaMVC.Models.ChartDataModel


<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>


<div class="row">
    <div class="col-md-6">
        <canvas id="pais" width="200" height="200"></canvas>
    </div>
    <div class="col-md-6">
        <canvas id="habilidad" width="200" height="200"></canvas>
    </div>
</div>
