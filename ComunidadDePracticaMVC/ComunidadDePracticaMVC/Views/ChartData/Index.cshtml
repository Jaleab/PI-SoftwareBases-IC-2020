<script>
    var ctx = document.getElementById('pais').getContext('2d');
    var chart = new Chart(ctx, {
        // The type of chart we want to create
        type: 'bar',
        // The data for our dataset
        data: {
            labels:@Html.Raw(ViewBag.LabelPais),
            datasets: [{
                label: 'Cantidad de miembros por país',
                backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
                ],
                borderColor: 'rgb(255, 99, 132)',
                data:@Html.Raw(ViewBag.DataPais)
            }]
        },
        // Configuration options go here
        options: {
            scales: {
                yAxes: [{
