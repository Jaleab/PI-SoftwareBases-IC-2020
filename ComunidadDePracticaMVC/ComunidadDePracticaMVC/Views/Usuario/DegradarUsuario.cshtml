@model IEnumerable<ComunidadDePracticaMVC.Models.UsuarioModel>
@{
    ViewBag.Title = "Miembros";
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Correo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Correo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
                @Html.DisplayFor(modelItem => item.Apellido1)
                @Html.DisplayFor(modelItem => item.Apellido2)
            </td>
            <td>
                @Html.ActionLink("Meritos", "VerMeritosUsuario", "Usuario", new { hilera = item.Correo }, null) |
                @Html.ActionLink("Degradar", "DegradarUsuario", "Usuario", new { hilera = item.Correo, Model }, null)
            </td>
        </tr>
    }
</table>