@model IEnumerable<ComunidadDePracticaMVC.Models.ArticuloModel>

@{
    ViewBag.Title = "Meritos del miembro";
}

<h2>Méritos de: @ViewBag.nombre</h2>
<hr />

<h4>Puntos totales de méritos: @ViewBag.merito</h4>

<h4>Categoria: @ViewBag.categoriaMiembro (@ViewBag.peso pts)</h4>
<br />
<table class="table table-striped"  >
    <thead>
        <tr>
            <th>
                @*@Html.DisplayNameFor(model => model.Titulo)*@
                Aporte
            </th>
            <th>
                @*@Html.DisplayNameFor(model => model.PuntajeLectores)*@
                Puntos
            </th>
            @*<th>
                @Html.DisplayNameFor(model => model.NotaRevision)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaPublicacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CantidadVistas)
            </th>*@
            <th>
                Fecha
            </th>
        </tr>
    </thead>
    <tbody>
    @{
        foreach (var item in Model)
        {

            if (item != null)
            {
                int puntos = item.PuntajeLectores + item.CantidadVisitas + item.NotaRevision;
                
                    <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Titulo)
                    </td>
                    <td>
                            @*@Html.DisplayFor(modelItem => item.PuntajeLectores)
                        @Html.DisplayFor(modelItem => item.NotaRevision)
                        @Html.DisplayFor(modelItem => item.CantidadVistas)*@
                        @puntos
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FechaPublicacion)
                    </td>
                 </tr>
             
                
            }
        }
    }
    </tbody>
</table>
<br />
<a class="btn box-btn" href="/Usuario/UsuariosComunidad"> Volver a usuarios</a>